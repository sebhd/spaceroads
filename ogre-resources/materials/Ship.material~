material SpaceRoads/Ship
{
   technique
   {
      pass
      {
         lighting on
 
         ambient 0.1 0.1 0.1 1
         diffuse 0.0 0.0 1 1
         emissive 0 0 0.5 1
      }
   }
}


material SpaceRoads/EngineFlame
{
	technique
	{
		pass
		{
			lighting off
			scene_blend add
			depth_write off
			diffuse vertexcolour

			texture_unit
			{
				texture particle.png
			}
		}
	}
}

material SpaceRoads/EngineSmoke
{
	technique
	{
		pass
		{
			lighting off
			scene_blend substract
			depth_write off
			diffuse vertexcolour

			texture_unit
			{
				texture particle.png
			}
		}
	}
}